{
  "name": "main",
  "version": "1.0.0",
  "description": "",
  "main": "./src/index.js",
  "scripts": {
    "build:renderer": "cd ../renderer && yarn build && cd ../main && cp -r ../renderer/build ./build/html",
    "electron": "electron src",
    "start": "set NODE_ENV=dev&& nodemon --watch .src/**/* --watch . --exec npm run electron",
    "dist": "rm -rf dist/ && set NODE_ENV=prod && electron-builder"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "electron": "^4.1.3",
    "nodemon": "^1.18.10",
    "electron-builder": "^20.39.0"
  },
  "build": {
    "electronVersion": "4.1.3",
    "appId": "com.popupSynonyms",
    "win": {
      "target": "NSIS",
      "icon": "build/icon.ico"
    },
    "productName": "popupSynonyms",
    "extraResources": [
      "tmp/**/*",
      "data/*.db",
      "build/**/*"
    ],
    "files": [
      "src/**/*"
    ]
  }
}
